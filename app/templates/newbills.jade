.row(ng-hide="bills")
  .col-xs-12
    h1 Loading...
.row(ng-show="bills.length == 0")
  .col-xs-12
    h1 No posts :(
    a.btn.btn-info(ng-href="#/new") Add something!
.row.post(ng-repeat="post in posts | orderBy:'date':true ")
  .col-xs-2(id="{{ post._id }}")
    ul.nav.nav-pills.nav-stacked
      li
        a(ng-href="#/post/{{ newbills._id }}") {{ newbills.date | date:'MM/dd/yyyy' }}
      li
        a(ng-href="#/edit/{{ newbills._id }}") Edit
      li
        a(href="" ng-click="delete(newbill)") Delete
  .col-xs-10
    article.well(ng-bind-html="newbills.body | markdown")
